-- movement and init

function init_player()
  x = 60
  y = 60
  s = 1
end

function draw_player()
  spr(s, x, y)
end

function move_player()
  s = 3
  
  if btn(1) then
    x += 2  
    s = 1
    if btn(5) then
      x = x + 4
    end    
  elseif btn(0) then
    x -= 2
    s = 2
    if btn(5) then
      x = x - 4
    end
  end
  
  if btn(2) then
    y -= 2
    s = 4
    if btn(5) then
      y = y - 4
    end    
  elseif btn(3) then
    y += 2
    s = 3
    if btn(5) then
      y = y + 4
    end 
  end  
  

end
