-- main

function _init()
  init_player()
  mx = 0
  my = 0
 
  cx = 0
  cy = 0
end

function _update()
  move_player()
  
  if x > 127 then
    cx = 128
  else 
    cx = 0
  end
  
end

function _draw()
  cls()
  camera(cx,cy)
  map(mx,my)
  draw_player()
end
