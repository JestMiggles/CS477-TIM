pico-8 cartridge // http://www.pico-8.com
version 34
__lua__

function _init()
  x = 60
  y = 60
  s = 1
end

function _update()
  s = 1
  
  if btn(1) then
    x = x + 1  
    s = 1
    if btn(4) then
      x = x + 4
    end
    
  elseif btn(0) then
    x = x - 1
    s = 2
    if btn(4) then
      x = x - 4
    end
  end
  
  if btn(2) then
    y = y - 1
    s = 4
    if btn(4) then
      y = y - 4
    end
    
  elseif btn(3) then
    y = y + 1
    s = 3
    if btn(4) then
      y = y + 4
    end 
  end  
  
end

function _draw()
  cls()
  spr(s, x, y)
end
